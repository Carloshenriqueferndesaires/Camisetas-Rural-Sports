<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Rural Sports</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      font-family: "Inter", sans-serif;
      font-weight: 400;
    }

    .main {
      height: 100vh;
      width: 100%;
      background-color: #d0d4d5;
    }

    .nav {
      height: 110px;
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 50px;
    }

    .nav-part-1 {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .nav img {
      height: 80px;
      width: auto;
      margin-right: 60px;
      cursor: pointer;
    }

    .nav-part-1 ul {
      display: flex;
      align-items: center;
      justify-content: center;
      list-style: none;
    }

    .nav-part-1 ul li {
      margin-right: 40px;
      font-size: 19px;
      font-weight: 500;
      text-transform: uppercase;
      cursor: pointer;
      position: relative;
      transition: color 0.3s ease;
    }

    .nav-part-1 ul li::after {
      content: "";
      position: absolute;
      left: 0;
      bottom: -5px;
      height: 2px;
      width: 0%;
      background-color: #2c7a7b;
      transition: width 0.3s ease;
    }

    .nav-part-1 ul li:hover {
      color: #2c7a7b;
    }

    .nav-part-1 ul li:hover::after {
      width: 100%;
    }

    .nav-part-2 i {
      margin-right: 40px;
      font-size: 21px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .nav-part-2 i:hover {
      color: #2c7a7b;
      transform: scale(1.2);
      text-shadow: 0 0 10px rgba(44, 122, 123, 0.5);
    }

    .content {
      height: calc(100% - 110px);
      width: 100%;
      position: relative;
      display: flex;
    }

    .content-left {
      height: 100%;
      width: 40%;
      padding: 80px 100px;
    }

    .content-left h5 {
      font-size: 20px;
      text-transform: capitalize;
      color: #555;
      margin-bottom: 10px;
    }

    .content-left h1 {
      font-size: 55px;
      text-transform: uppercase;
      color: #000;
      margin-bottom: 25px;
    }

    .content-left p {
      font-size: 20px;
      color: #000;
      width: 80%;
      margin-bottom: 30px;
    }

    .btn {
      background-color: #000;
      color: #fff;
      font-size: 15px;
      padding: 12px 40px;
      font-weight: 600;
      border: none;
      border-radius: 50px;
      border-top-left-radius: 0;
      transition: background 0.3s ease, transform 0.2s ease;
    }

    .btn:hover {
      background-color: #2c7a7b;
      transform: scale(1.05);
      cursor: pointer;
    }

    .content-right {
      height: 100%;
      width: 60%;
      padding: 110px 100px;
      white-space: nowrap;
      overflow-x: auto;
    }

    .content-right::-webkit-scrollbar {
      display: none;
    }

    /* ===== CORRIGIDO: Layout dos produtos ===== */
    .product {
      width: 250px;
      background-color: #f1f1f1;
      border-radius: 8px;
      box-shadow: 0 5px 10px rgba(17, 0, 17, 0.2);
      display: inline-block;
      margin-right: 20px;
      overflow: hidden;
      vertical-align: top;
      text-align: center;
      transition: transform 0.2s ease;
    }

    .product:hover {
      transform: scale(1.03);
    }

    .product img {
      width: 100%;
      height: 260px;
      object-fit: cover;
      display: block;
      border-bottom: 1px solid #ccc;
    }

    .product h4 {
      font-size: 18px;
      text-transform: capitalize;
      font-weight: bold;
      margin: 10px 0 5px 0;
      color: #000;
    }

   .product p.catagory {
  font-size: 14px;
  color: #333;
  margin: 0 10px 8px 10px;
  white-space: normal;        
  word-wrap: break-word;      
  overflow: visible;          
  height: auto;              
  display: block;             
}
    .product p.price {
      font-weight: bold;
      color: #000;
      margin-bottom: 15px;
    }

    /* Modal */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      justify-content: center;
      align-items: center;
    }

    .modal-content {
      background-color: #14122b;
      color: #fff;
      border-radius: 15px;
      padding: 30px;
      width: 320px;
      text-align: center;
      position: relative;
      box-shadow: 0 0 15px rgba(0, 255, 191, 0.08);
    }

    .close {
      position: absolute;
      top: 10px;
      right: 15px;
      font-size: 24px;
      cursor: pointer;
      color: aquamarine;
    }

    .close:hover {
      color: #2c7a7b;
    }

    input[readonly] {
      border: none;
      background: transparent;
      color: #fff;
      width: 80%;
      text-align: center;
      font-size: 15px;
    }

    input {
      background-color: #1e1c2e;
      color: #fff;
      border-radius: 10px;
      padding: 5px;
      border: 1px solid transparent;
      text-align: center;
      transition: all 0.3s;
    }

    input:focus {
      outline: none;
      border-color: aquamarine;
    }

    .btn-edit, .btn-logout {
      display: inline-block;
      background-color: aquamarine;
      color: #141414;
      border: none;
      padding: 10px 25px;
      border-radius: 25px;
      cursor: pointer;
      font-weight: bold;
      margin-top: 10px;
      transition: 0.3s;
    }

    .btn-edit:hover, .btn-logout:hover {
      background-color: rgb(0, 230, 170);
      transform: scale(1.05);
    }

    .modal-content p {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin: 10px 0;
    }

    .modal-content p strong {
      display: block;
      margin-bottom: 5px;
    }

    .modal-content input {
      width: 90%;
      max-width: 250px;
      background-color: #1e1c2e;
      color: #fff;
      border-radius: 10px;
      padding: 6px;
      border: 1px solid transparent;
      text-align: center;
      transition: all 0.3s;
    }
  </style>
</head>

<body>
  <div class="main">
    <div class="nav">
      <div class="nav-part-1">
        <img src="imagem/logo_pagina_inicial.png" alt="logo" />
        <ul>
          <li>Início</li>
          <li>Homem</li>
          <li>Mulher</li>
          <li>Coleção</li>
          <li>Contato</li>
        </ul>
      </div>

      <div class="nav-part-2">
        <i class="ri-user-line" id="profileIcon"></i>
        <i class="ri-search-line"></i>
        <i class="ri-shopping-cart-2-line"></i>
        <i class="ri-menu-line"></i>
      </div>
    </div>

    <div class="content">
      <div class="content-left">
        <h5>Explore nossos produtos</h5>
        <h1>Camisetas Esportivas da Rural Sports</h1>
        <p>Aproveite nossas ofertas e compre nossos produtos para renovar sua motivação</p>
        <button class="btn">Compre Agora</button>
        <button onclick="window.location.href='/produtos/novo'" class="btn">Cadastrar Produto</button>
      </div>

      <div class="content-right">
        @each(product in products)
          <div class="product">
            @if(product.imageUrl)
              <img src="{{ product.imageUrl }}" alt="Imagem do produto">
            @endif
            <h4>{{ product.name }}</h4>
            <p class="catagory">{{ product.description }}</p>
            <p class="price">R$ {{ product.price }}</p>
          </div>
        @endeach
      </div>
    </div>
  </div>

  <!-- MODAL PERFIL -->
  <div id="profileModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Meu Perfil</h2>
      <img id="userAvatar" src="/imagem/logo3.png" alt="Avatar"
        style="width:100px; height:100px; border-radius:50%; margin-bottom:10px;">
      <p><strong>Nome:</strong><input type="text" id="userName" value="Carregando..." readonly></p>
      <p><strong>Email:</strong><input type="email" id="userEmail" value="Carregando..." readonly></p>
      <p><strong>Sexo:</strong><input type="text" id="userSexo" value="Carregando..." readonly></p>
      <div class="buttons">
        <button id="editBtn" class="btn-edit">Editar</button>
        <button id="saveBtn" class="btn-edit" style="display:none;">Salvar</button>
        <button id="cancelBtn" class="btn-logout" style="display:none;">Cancelar</button>
        <form method="POST" action="/logout" style="margin-top:10px;">
          <button type="submit" class="btn-logout">Sair</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    const modal = document.getElementById('profileModal')
    const icon = document.getElementById('profileIcon')
    const closeBtn = document.querySelector('.close')
    const nameField = document.getElementById('userName')
    const emailField = document.getElementById('userEmail')
    const sexoField = document.getElementById('userSexo')

    icon.addEventListener('click', async () => {
      try {
        const res = await fetch('/api/profile')
        if (!res.ok) throw new Error('Usuário não logado')
        const data = await res.json()
        nameField.value = data.name
        emailField.value = data.email
        sexoField.value = data.sexo || 'Não informado'
        modal.style.display = 'flex'
      } catch (err) {
        modal.style.display = 'flex'
      }
    })
    closeBtn.addEventListener('click', () => modal.style.display = 'none')
    window.addEventListener('click', e => { if (e.target === modal) modal.style.display = 'none' })
  </script>
</body>
</html>
