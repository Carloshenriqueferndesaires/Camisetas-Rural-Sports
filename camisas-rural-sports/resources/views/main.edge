<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@!section('title', 'Rural Sports')</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: "Inter", sans-serif;
      background-color: #d0d4d5;
      color: #222;
    }

    header {
      background-color: #2f3640;
      color: white;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
    }

    header h1 {
      font-weight: 700;
      font-size: 1.5rem;
    }

    nav a {
      color: white;
      text-decoration: none;
      margin-left: 1rem;
    }

    nav a:hover {
      text-decoration: underline;
    }

    main {
      min-height: 80vh;
      padding: 2rem;
    }

    footer {
      background-color: #2f3640;
      color: white;
      text-align: center;
      padding: 1rem;
    }

    .form-container {
      background: white;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      max-width: 400px;
      margin: auto;
    }

    input, button {
      width: 100%;
      margin-top: 10px;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 8px;
    }

    button {
      background-color: #1e90ff;
      color: white;
      border: none;
      cursor: pointer;
    }

    button:hover {
      background-color: #0d6efd;
    }

    .center {
      text-align: center;
    }
  </style>
</head>
<body>
  <header>
    <h1>Rural Sports</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/login">Login</a>
      <a href="/cadastro">Cadastro</a>
    </nav>
  </header>

  <main>
    @!section('content')
  </main>

  <footer>
    <p>© 2025 Rural Sports — Todos os direitos reservados.</p>
  </footer>
</body>
</html>
