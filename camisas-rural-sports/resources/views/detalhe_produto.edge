<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Detalhes do Produto</title>
  <style>
    body {
      background-color: #0f0c25;
      color: #fff;
      font-family: 'Inter', sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    .card {
      background-color: #14122b;
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 0 20px rgba(0, 255, 191, 0.1);
      max-width: 400px;
      text-align: center;
    }

    img {
      width: 100%;
      border-radius: 15px;
      object-fit: contain;
      margin-bottom: 20px;
    }

    h2 {
      color: aquamarine;
      margin-bottom: 10px;
    }

    p {
      color: #b6b6b6;
      margin-bottom: 10px;
    }

    span {
      display: block;
      color: aquamarine;
      font-weight: bold;
      font-size: 18px;
      margin-bottom: 20px;
    }

    a {
      text-decoration: none;
      color: #fff;
      background-color: #000;
      padding: 10px 25px;
      border-radius: 50px;
      border-top-left-radius: 0;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    a:hover {
      background-color: #2c7a7b;
      transform: scale(1.05);
    }
  </style>
</head>
<body>
  <div class="card">
    @if(product.imageUrl)
      <img src="{{ product.imageUrl }}" alt="Imagem do produto">
    @endif

    <h2>{{ product.name }}</h2>
    <p>{{ product.description }}</p>
    <span>R$ {{ product.price }}</span>

    <a href="/produtos">Voltar</a>
  </div>
</body>
</html>
