<body>
  <div id="cadastro">
    <div class="caixa">
      <img src="/public/imagem/logo.png" alt="Logo do site">
      <h1>Criar Conta</h1>

      <!-- O formul√°rio de cadastro -->
      <form method="POST" action="/register" id="formCadastro">
        
        <div class="input-field">
          <input type="text" name="name" placeholder="Nome completo" value="{{ name ?? '' }}" required>
        </div>
        
        <div class="input-field">
          <input type="text" name="sexo" placeholder="Sexo" value="{{ sexo ?? '' }}" required>
        </div>
    
        <div class="input-field">
          <input type="email" name="email" placeholder="Email" value="{{ email ?? '' }}" required>
        </div>

        <div class="input-field">
          <input type="password" name="password" placeholder="Senha" required>
        </div>

        <div class="input-field">
          <input type="password" name="confirm_password" placeholder="Confirmar senha" required>
        </div>

        <div class="entrar">
          <p>
            J√° tem uma conta?
            <a href="/login">Fa√ßa login.</a>
          </p>
          <input type="submit" value="Cadastrar">
        </div>

        <!-- Local para mostrar erros de valida√ß√£o -->
        <p class="message" id="senhaErro" style="color: red;"></p>
      </form>

      <!-- Exibir mensagens do controller -->
      @if(flashMessages.get('error'))
        <p class="message" style="color: red;">{{ flashMessages.get('error') }}</p>
      @endif

      @if(flashMessages.get('success'))
        <p class="message" style="color: aquamarine;">{{ flashMessages.get('success') }}</p>
      @endif
    </div>
  </div>

  <!-- üîΩ Script de verifica√ß√£o de senha -->
  <script>
    const form = document.getElementById('formCadastro')
    const erro = document.getElementById('senhaErro')

    form.addEventListener('submit', function (e) {
      const senha = form.querySelector('input[name="password"]').value
      const confirmar = form.querySelector('input[name="confirm_password"]').value

      if (senha !== confirmar) {
        e.preventDefault() // impede o envio do formul√°rio
        erro.textContent = '‚ö†Ô∏è As senhas n√£o coincidem. Tente novamente.'
      } else {
        erro.textContent = ''
      }
    })
  </script>
</body>
</html>