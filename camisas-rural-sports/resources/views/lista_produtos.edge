<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Produtos - Rural Sports</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">

  <style>
    body {
      background-color: #0f0c25;
      color: #fff;
      font-family: 'Inter', sans-serif;
      margin: 0;
      padding: 40px;
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
      color: aquamarine;
    }

    .container {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 20px;
      max-width: 1000px;
      margin: 0 auto;
    }

    .product {
      background-color: #14122b;
      padding: 20px;
      border-radius: 15px;
      text-align: center;
      box-shadow: 0 0 10px rgba(0, 255, 191, 0.1);
      transition: 0.3s;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      min-height: 460px;
    }

    .product img {
      width: 100%;
      height: 250px;
      object-fit: cover;
      display: block;
      margin: 0 auto 15px auto;
      border-radius: 12px;
    }

    .product:hover {
      transform: scale(1.03);
      box-shadow: 0 0 15px rgba(0, 255, 191, 0.3);
    }

    .product h3 {
      margin: 10px 0 5px;
      font-size: 18px;
      color: #fff;
    }

    .product p {
      color: #b6b6b6;
      font-size: 14px;
    }

    .product span {
      display: block;
      margin-top: 8px;
      font-weight: bold;
      color: aquamarine;
    }

    .btn {
      display: inline-block;
      background-color: aquamarine;
      color: #14122b;
      padding: 10px 20px;
      border-radius: 25px;
      border: none;
      cursor: pointer;
      font-weight: bold;
      text-decoration: none;
      transition: 0.3s;
      margin-top: 10px;
    }

    .btn:hover {
      background-color: rgb(0, 230, 170);
    }

    .btn-delete {
      background-color: #ff4d4d;
      color: #fff;
    }

    .btn-delete:hover {
      background-color: #e64545;
    }

    .center {
      text-align: center;
      margin-top: 40px;
    }

    .top-buttons {
      text-align: center;
      margin-bottom: 30px;
    }
  </style>
</head>
<body>
  <h1>Produtos Cadastrados</h1>


  <div class="top-buttons">
    <a href="/produtos/novo" class="btn">Cadastrar Novo Produto</a>
    <a href="/" class="btn" style="background-color:#fff; color:#14122b;">Voltar</a>
    <form action="/logout" method="POST" style="display:inline;">
      <button type="submit" class="btn btn-delete" style="margin-left:10px;">Sair</button>
    </form>
  </div>

  <div class="container">
    @each(product in products)
      <div class="product">
        @if(product.imageUrl)
          <img src="{{ product.imageUrl }}" alt="Imagem do produto">
        @endif

        <h3>{{ product.name }}</h3>
        <p>{{ product.description }}</p>
        <span>R$ {{ product.price }}</span>

        <form action="/produtos/{{ product.id }}/editar" method="GET">
          <button type="submit" class="btn">Editar</button>
        </form>

        <form action="/produtos/{{ product.id }}/deletar" method="POST">
          <button type="submit" class="btn btn-delete">Excluir</button>
        </form>
      </div>
    @endeach
  </div>
</body>
</html>
